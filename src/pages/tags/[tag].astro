---

import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
export async function getStaticPaths() {
    const allPosts = await getCollection("blog");

    const uniqueTags = [...new Set(allPosts.map((post:any) => post.data.tags).flat())]

    return uniqueTags.map((tag) => {
        const filteredPosts = allPosts.filter((post: any) => post.data.tags.includes(tag))

        return {
            params: { tag },
            props: { posts: filteredPosts },
        }
    })
};

const { tag } = Astro.params;
const { posts } = Astro.props
---

<BaseLayout pageTitle={tag}>
    <div class="breadcrumbs text-sm">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/tags">Tags</a></li>
        </ul>
      </div>
<div>
    <h1 class="text-4xl font-bold text-center pt-8">Posts tagged with <u>{tag}</u></h1>
    <ul>
        {posts.map((post: any) => <li><a href={`/posts/${post.id}`}>{post.data.title}</a></li>)}
    </ul>
</div>
</BaseLayout>