---
import BaseLayout from "../../layouts/BaseLayout.astro";
const allPosts = Object.values(import.meta.glob('/src/blog/*.md', {eager: true}))
const tags = [...new Set(allPosts.map((post: any) => post.frontmatter.tags).flat())];

const pageTitle = "Tag List"
---

<BaseLayout pageTitle={pageTitle}>
    <div class="breadcrumbs text-sm">
        <ul>
          <li><a href="/">Home</a></li>
          <li>Tags</li>
        </ul>
      </div>
    <h1 class="text-4xl font-bold text-center pt-8 pb-2">{pageTitle}</h1>
    <div>
        <ul>
            {tags.map((tag) => (
                <li class="py-1"><a href={`/tags/${tag}`} class="hover:text-blue-600">{tag}</a></li>
            ))}
        </ul>
    </div>
</BaseLayout>